<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:minHeight="@dimen/list_row_min_height"
    android:paddingLeft="@dimen/list_row_side_padding"
    android:paddingRight="@dimen/list_row_side_padding">

    <TextView
        android:id="@+id/venue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/venue_distance"
        android:inputType="textMultiLine"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/venue_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>